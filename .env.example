# Matrix Architect Configuration

# Redis
REDIS_URL=redis://localhost:6379/0

# Database
DATABASE_URL=postgresql://architect:architect_pass@localhost:5432/matrix_architect

# Security
JWT_SECRET=your-secret-key-change-in-production

# LLM Providers
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# Matrix Services
MATRIX_HUB_URL=https://hub.matrix.ai
MATRIX_GUARDIAN_URL=https://guardian.matrix.ai
MATRIX_AI_URL=https://ai.matrix.ai

# Observability
LOG_LEVEL=INFO
JSON_LOGS=true

# Feature Flags
ENABLE_SANDBOXING=true
ENABLE_SECURITY_SCAN=true
REQUIRE_APPROVALS=true
